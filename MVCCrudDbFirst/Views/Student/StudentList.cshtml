@model List<MVCCrudDbFirst.Context.tbl_Student>
@{
    ViewBag.Title = "StudentList";
}

<table class="table table-hover">
    <tr>
        <th>Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.FName</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.Description</td>
            <td>
                <a href="@Url.Action("Student",new {item.Id ,item.Name,item.FName,item.Email,item.Mobile,item.Description })"><i class="glyphicon glyphicon-pencil"></i></a>
                <a href="@Url.Action("Delete",new { ID=@item.Id})"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
    }


</table>


